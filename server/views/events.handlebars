<div class="container-md">
  {{#if error}}
  <div class="add-form">
    <h4 class="form-heading">Add event</h4>
    <p class="form-error">{{error.message}}</p>
    <form method="POST" action="events">
      <div class="row">
        <div class="col">
          <input type="text" name="name" class="form-control" placeholder="Event name" value="{{error.name}}" required/>
        </div>
        <div class="col">
          <input type="date" name="date" class="form-control" placeholder="Date" value="{{error.date}}" required/>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <button type="submit" class="btn btn-dark add-submit">
            Add
          </button>
          <a href="/events" class="btn btn-secondary">Cancel</a>
        </div>
      </div>
    </form>
  </div>
  {{else}}
  <h2 class="page-heading">Gallery Events</h2>
  <div class="search-form">
  </div>

  {{!-- Results Table --}}

  <h4 class="form-heading">Events Table</h4>
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <th>Event Id</th>
      <th>Event Name</th>
      <th>Date</th>
      <th>Edit</th>
      {{!-- <th>Delete</th> --}}
    </thead>
    <tbody>
      {{#each context}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.date}}</td>
        <td><a href="/events/{{this.id}}" class="btn btn-dark edit" data-id={{this.id}}>Edit</a></td>
        {{!-- <td><a href="#" class="btn btn-dark edit" data-id={{this.id}}>Edit</a></td> --}}
        {{!-- <td><a href="#" class="btn btn-danger" data-id={{this.id}}>Delete</a></td> --}}
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{!-- <button type="button" class="btn btn-dark add-event">Add Event</button> --}}
  {{!--
  <hr class="hr-spacing" /> --}}
  <!-- Hidden when page loads -->
  <div class="add-form">
    <h4 class="form-heading">Add event</h4>
    <form method="POST" action="events">
      <div class="row">
        <div class="col">
          <input type="text" name="name" class="form-control" placeholder="Event name" required/>
        </div>
        <div class="col">
          <input type="date" name="date" class="form-control" placeholder="Date" required/>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <button type="submit" class="btn btn-dark add-submit">
            Add
          </button>
        </div>
      </div>
    </form>
  </div>
  {{/if}}
</div>

