<div class="container-md">
  {{#if error}}
  <h2 class="page-heading">Edit Styles</h2>
    <div class="search-form">
      <p class="form-error">{{error.message}}</p>
      <div class="col-6">
        <form method="POST" action="/styles/edit/{{error.id}}">
          <div class="row">
            <div class="col">
              <input type="text" name="description" class="form-control" value="{{error.name}}" required/>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <button type="submit" class="btn btn-dark search-submit">
                Update Style
              </button>
              {{!-- <a href="/styles/delete/{{this.id}}" class="btn btn-danger">Delete Style</a> --}}
              <a href="/styles" class="btn btn-secondary">Cancel</a>
              {{!-- <button type="button" class="btn btn-secondary">
                Cancel
              </button> --}}
            </div>
          </div>
        </form>
      </div>
    </div>
  {{else}}
  <h2 class="page-heading">Edit Styles</h2>

  {{!-- This edit page is not working --}}

  <div class="search-form">


    {{!-- <h4 class="form-heading">Edit artists</h4> --}}

    <div class="col-6">
      {{!-- Edit Form --}}
      {{#each context}}
      <form method="POST" action="/styles/edit/{{this.id}}">

        <div class="row">
          <div class="col">
            <input type="text" name="description" class="form-control" value={{this.description}} required/>
          </div>
        </div>


        <div class="row">
          <div class="col">

            <button type="submit" class="btn btn-dark search-submit">
              Update Style
            </button>
            {{!-- <a href="/styles/delete/{{this.id}}" class="btn btn-danger">Delete Style</a> --}}
            <a href="/styles" class="btn btn-secondary">Cancel</a>
            {{!-- <button type="button" class="btn btn-secondary">
              Cancel
            </button> --}}
          </div>
        </div>


      </form>
      {{/each}}
    </div>
  </div>
  {{/if}}
</div>