<div class="container-md">
  {{#if error}}
    <div class="add-form">
      <h4 class="form-heading">Add style</h4>
      <p class="form-error">{{error.message}}</p>
      <div class="col-3">
        <form method="POST" action="styles">
          <div class="row">
            <div class="col">
              <input type="text" name="name" class="form-control" placeholder="Style name" value="{{error.name}}" required/>
            </div>
            <div class="row">
              <div class="col">
                <button type="submit" class="btn btn-dark add-submit">
                  Add
                </button>
                <a href="/styles" class="btn btn-secondary">Cancel</a>
              </div>
            </div>
        </form>
      </div>
    </div>
  {{else}}
  <h2 class="page-heading">Art Styles</h2>

  <table class="table table-striped table-hover">
    <h4 class="form-heading">Styles Table</h4>
    <thead class="table-dark">
      <th>Style Id</th>
      <th>Style Description</th>
      <th>Edit</th>
    </thead>
    <tbody>
      {{#each context}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.style}}</td>
        <td><a href="/styles/{{this.id}}" class="btn btn-dark edit" data-id={{this.id}}>Edit</a></td>
        {{!-- <td><a href="#" class="btn btn-dark edit" data-id={{this.id}}>Edit</a></td>
        <td><a href="#" class="btn btn-danger" data-id={{this.id}}>Delete</a></td> --}}
      </tr>
      {{/each}}
    </tbody>
  </table>

  <div class="add-form">
    <h4 class="form-heading">Add style</h4>
    <div class="col-3">
      <form method="POST" action="styles">
        <div class="row">
          <div class="col">
            <input type="text" name="name" class="form-control" placeholder="Style name" required/>
          </div>
          <div class="row">
            <div class="col">
              <button type="submit" class="btn btn-dark add-submit">
                Add
              </button>
            </div>
          </div>
      </form>
    </div>
    {{/if}}
  </div>
</div>
